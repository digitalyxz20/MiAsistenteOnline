<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAO.UIForms.Views.LoginPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Login">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding Login}">
            <StackLayout Padding="8">
                
                <Label Text="Email"></Label>
                <Entry Text="{Binding Email}" Placeholder="enter your email" Keyboard="Email"></Entry>
                
                <Label Text="Password"></Label>
                <Entry Text="{Binding Password}" Placeholder="enter your password" IsPassword="true"></Entry>
                
                <Button Text="Login" Command="{Binding LoginCommand}"></Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>